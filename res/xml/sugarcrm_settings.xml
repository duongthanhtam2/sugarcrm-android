<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<EditTextPreference android:key="restUrl"
		android:defaultValue="@string/defaultUrl"
		android:title="@string/restUrl" 
		android:summary="@string/urlSummary" />
		
	<EditTextPreference android:key="usr"
		android:title="@string/username" 
		android:summary="@string/userSummary"
		android:defaultValue="@string/defaultUser" />
		
	<CheckBoxPreference android:key="alarm"
		android:title="Enable/Disable alarms" />
		
	<PreferenceScreen android:key="sortSettings"
         android:title="@string/sortSettings"
         android:summary="@string/sortSummary">
         <intent            
             android:targetPackage="com.imaginea.android.sugarcrm"
             android:targetClass="com.imaginea.android.sugarcrm.ModuleSortConfigActivity" />
     </PreferenceScreen>

	<PreferenceScreen android:key="syncSettings"
         android:title="@string/syncSettings"
         android:summary="@string/syncSummary">
         <intent            
             android:targetPackage="com.imaginea.android.sugarcrm"
             android:targetClass="com.imaginea.android.sugarcrm.SyncConfigActivity" />
     </PreferenceScreen>
</PreferenceScreen>
